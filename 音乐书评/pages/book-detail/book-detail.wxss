/* pages/book-detail/book-detail.wxss */
.bigtitle{
   
    width: 100%;
    height: 300px;
    
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.bigtitle>image{
    width: 240rpx;
    height: 360rpx;
    border-radius: 5px;
}
.bigtitle>view{
    margin-top: 30px;
    font-size: 18px;
}
.evalue{
    text-align: center;
    font-size: 17px;
}
.comment{
    margin-top: 20px;
    color: rgb(78, 77, 77);
}
.summary{
    display: flex;
    flex-direction: column;
    margin-top: 50px;
}

.summary>view,.header{
    font-size: 18px;
    text-align: center;
}
.summary>text{
    text-indent: 30rpx;
    display: block;
    font-size: 33rpx;
    color: #333;  
}
.msg{
    display: flex;
    flex-direction: column;
    margin-top: 50px;
}
.msg:not(:first-child){
    margin-left: 30px;
    display: flex;
}
.msg>view>text{
    margin-right: 20px;
    color: #999;
}
.bg{
    background: rgb(220, 220, 247) !important;
}
.bg1{
    background: rgb(223, 209, 235) !important;
}
.bottom{
    position: fixed;
    left:0;
    bottom:0;
    z-index: 105;
    background: #eee;
    width: 100%;
    height: 43px;
}
.bottom>input{
    text-align: center;
    margin-left:20px;
    position: relative;
    width: 200px;
    height: 40px;
    border-radius: 20px;
    border: 1px solid #333;
}
.bottom>image{
    width: 25px;
    height: 25px;
    position: absolute;
    left: 37px;
    bottom:8px;

}

.com-content{
    position: fixed;
    z-index: 100;
    left: 0;
    bottom: 0;
    width: 100%;
    background: #fff;
}
.com-head{
    display: flex;
    justify-content: space-between;
    padding-left: 20rpx;
    padding-right: 20rpx;
    border-bottom: 1rpx solid #eee;
    border-top: 1rpx solid #eee;
    height: 100rpx;
    align-items: center;
    position: relative;
}
.com-head>button{
    height: 100rpx;
    position: absolute;
    right: 5px;
    top: 0;
    border:1px solid #fff;
    background: #fff;
}
.int{
    width: 680rpx;
    height: 70rpx;
    border: 1rpx solid #333;
    border-radius: 30rpx;
    text-align: center;
    margin-left: auto;
    margin-right: auto;
}
.com-int{
    height: 100rpx;
}
.model{
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: #333;
    opacity: 0.6;
    z-index: 99;
}