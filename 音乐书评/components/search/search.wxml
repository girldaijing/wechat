<!--components/search/search.wxml-->
<view class="header">
    <icon type="search" size="23" color="#999"></icon>
    <input type="text" placeholder="作者、书名" value="{{value}}" confirm-type="search" bindconfirm="onConfirm" bindinput="Input"/>
    <icon type="clear" size="23" color="#333" class="clear" bindtap="onClear" wx:if="{{isClear}}"></icon>
    <button bindtap="onCancel" plain="{{true}}">取消</button>
</view>

<view class="container" wx:if="{{!isSearch}}">
    <view class="history">历史搜索</view>
    <view class="hiscontainer">
         <block wx:for="{{words}}" wx:key="{{index}}">
             <v-tag content="{{item}}" bind:add="onConfirm"></v-tag>
         </block>
    </view>
    <view class="hots">热门搜索</view>
    <view class="hotscontainer">
        <block wx:for="{{hots}}" wx:key="{{index}}">
            <v-tag content="{{item}}" bind:add="onConfirm"></v-tag>
        </block>
    </view>
</view>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                            z


<view class="list" wx:if="{{isSearch}}">
    <block wx:for="{{books}}">
        <v-book book="{{item}}"></v-book>
    </block>
</view>

<view class="space" wx:if="{{isResult}}">抱歉，您搜索的"{{value}}"页面不存在</view>
<v-loading wx:if="{{isLoading}}"></v-loading>
