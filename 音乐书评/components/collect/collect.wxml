<!--components/collect/collect.wxml-->
<wxs src="../../utils/filter.wxs" module="tools"></wxs>
<view class="item">
    <view class="header">
        <v-tag content="{{tools.filterType(classic.type)}}"></v-tag>
        <v-like isLike="{{classic.like_status}}" count="{{classic.fav_nums}}" readOnly="{{true}}"></v-like>
    </view>
    <image src="{{classic.image}}" class="{{classic.type==200?'music':'banner'}}"></image>
    <view class="footer">
        <text>{{classic.content}}</text>
    </view>

</view>