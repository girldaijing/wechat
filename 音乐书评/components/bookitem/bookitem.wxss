/* components/bookitem/bookitem.wxss */
.bookitem{
    width: 240rpx;
    height: 360rpx;
    border-radius: 5px;
    box-shadow: 0 0 10rpx 3rpx #999;
    position: relative;
}

.bookback {
    width: 100%;
    height: 100%;
    border-radius: 5px;
}

.detail {
    width:100%;
    height: 64px;
   
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    z-index: 100;
    position: absolute;
    bottom: 0;
    left: 0;
    background: #fff;
    border-bottom-left-radius:5px;
    border-bottom-right-radius:5px;
}
.author{
    margin-top: 8px;
    font-size: 22rpx;
    color: #999;
}
.fav{
    font-size: 22rpx;
    color: #999;
    position: absolute;
    right: 5px;
    bottom: 2px;
}
.booktitle{
    margin-top: 10px;
    font-size: 28rpx;
}