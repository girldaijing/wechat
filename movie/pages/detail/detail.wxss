/* pages/detail/detail.wxss */

.header{
    width: 100%;
    height: 180px;
   
    position: relative;
}
.words{
    display:flex;
    flex-direction: column;
    margin-left: 40rpx;
    line-height:100rpx;
    padding-top: 100rpx;
}
.w-one{
    font-size: 26px;
    color: antiquewhite;
}
.w-two{
    font-size: 28rpx;
    color: antiquewhite;
}
.w-two>text{
    margin: 15rpx;
}
.w-three{
    font-size: 22rpx;
    color:red;
    margin: 15rpx;
}
.w-four{
    font-size: 22rpx;
    color: rgb(124, 123, 122);
    margin: 15rpx;
}

.back{
    position: absolute;
    z-index: -99;
    filter: blur(15rpx);
    height: 100%;
}
.small{
    width: 200rpx;
    height: 270rpx;
    position: absolute;
    right: 40rpx;
    top: 280rpx;
}
.detail{
    width: 100%;
    height: 130px;
    margin-top: 30px;
    display:flex;
    flex-direction: column;
}
.xing{
    display: flex;
}

.de-title{
    margin: 15rpx;
    font-size: 30rpx;
}
.de-summary{
    display:flex;
    flex-direction: column;
}
.de-summary>p>text{
    font-size: 22rpx;
    margin: 15rpx;
    color: rgb(170, 169, 167);
}
.introduce{
    width: 100%;
    height: 130px;
    border-top: 1px solid #9999;
    display:flex;
    flex-direction: column;
    justify-content: center;
    border-bottom: 1px solid #9999;
}
.introduce>p{
    font-size: 22rpx;
    margin: 15rpx;
    color: rgb(170, 169, 167);
}
.act{
    width: 100%;
    height:90px;
    display:flex;
    flex-direction: column;
   
}
.act>p{
    font-size: 22rpx;
    margin: 15rpx;
    color: rgb(170, 169, 167);
}
.pic{
    width:150rpx;
    height: 150rpx;
}

.scroll{
    white-space: nowrap;
    width: 300px;
    height: 120px;
} 
.scroll view{
    display:inline-flex;
    flex-direction: column;
}
.scroll image{
    width: 170rpx;
    height: 250rpx;
    padding-right: 40rpx;
}
.scroll>text{
    text-align: center;
}

.star{
    margin-left:10rpx;
    margin-right: 10rpx;
    margin-top: 20rpx;
    line-height: 24rpx;
}